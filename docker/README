# build image for VS Code

```bash
hpccm --recipe docker.py > Dockerfile_daily
cat docker_ext >> Dockerfile_daily

docker build -f Dockerfile_daily -t vanreeslab/flups_daily:v0.0 .
docker login
docker push vanreeslab/flups_daily:v0.0
```


# build image for validation

# docker build -t immc/flups-valid:v0.4 .
docker build -t vanreeslab/flups:v0.5 .
#v0.3 has valgrind but not metis
# v0.5 has metis and google test but not valgrind 

# push image to docker-hub
docker login
docker push vanreeslab/flups:v0.5

# local test:
docker run -it --rm vanreeslab/flups:v0.5
