CXX = mpic++
CC = mpicc

OPTS += #-DVERBOSE #-DPB_DBG

#CXXFLAGS := -O3 -g -fopenmp #-fsanitize=undefined -fsanitize=address
#LDFLAGS := -fopenmp -lstdc++ -lm #-fsanitize=undefined -fsanitize=address

CXXFLAGS := -O3 -std=c++17 -fopenmp  -Wno-format-security -DPROF #-DNDEBUG
CCFLAGS := -O3 -std=c99 -fopenmp -Wno-format-security #-DNDEBUG
LDFLAGS += -fopenmp -lstdc++ -lm

